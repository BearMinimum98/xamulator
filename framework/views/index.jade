extends backbone
block bodyContent
  block pageTitle
    .jumbotron
      h1= eTest
  block pageContent
    .sm.spacer
    .row
      .large-12.columns
        h1 eTest Teacher's Portal
        .sm.spacer
    .row
      .large-12.columns
        .panel
          .row
            .large-6.medium-6.columns
              center
                p
                  a(href='#', data-reveal-id='teacherModal') Teachers...
                  br
                  | Sign in to your account to create and manage tests.
              center
                a.medium.button(href='#', data-reveal-id='teacherModal') Sign In
              #teacherModal.reveal-modal(style='position: absolute; float: left;', data-reveal='data-reveal')
                h3
                  center Sign In
                .sm.spacer
                .row
                  .large-6.columns
                    .callout.panel
                      h4
                        center Register
                      .sm.spacer
                      .row
                        .large-12.columns
                          .row.collapse
                            .small-3.columns
                              span.prefix Email:
                            .small-9.columns
                              input(type='text', placeholder='Email...')
                      .row
                        .large-12.columns
                          .row.collapse
                            .small-3.columns
                              span.prefix Username:
                            .small-9.columns
                              input(type='text', placeholder='Username...')
                      .row
                        .large-12.columns
                          .row.collapse
                            .small-3.columns
                              span.prefix Password:
                            .small-9.columns
                              input(type='text', placeholder='Password...')
                      .spacer
                      center
                        a.medium.round.success.button(href='#') Submit
                        .spacer
                  .large-6.columns
                    .callout.panel
                      .spacer
                      h4
                        center Already Registered?
                      .spacer
                      .row
                        .large-12.columns
                          .row.collapse
                            .small-3.columns
                              span.prefix Username/Email:
                            .small-9.columns
                              input(type='text', placeholder='User/Email...')
                      .spacer
                      .row
                        .large-12.columns
                          .row.collapse
                            .small-3.columns
                              span.prefix Password:
                            .small-9.columns
                              input(type='text', placeholder='Password...')
                      .spacer
                      center
                        a.medium.round.success.button(href='#') Login
                        .spacer
                a.close-reveal-modal &times;
            .large-6.medium-6.columns
              center
                p
                  a(href='#', data-reveal-id='studentModal') Students...
