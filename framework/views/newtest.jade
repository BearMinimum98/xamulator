extends layout

block pageContent
	.panel(style='width:15%;height:100%;position:absolute;')
	.row.primary
		.large-12.columns
			center
				h1.title(style="font-family: 'Lobster', cursive; font-size:340%") Dashboard
		br
	.large-2.columns
		br
	.large-10.columns
		.row
			.large-12.columns
				form(action='/newtest' method='post' id = "newtestCreation")
					.panel
						.row
							.large-5.columns
								input(type = "text" placeholder="Test Name" name="testName")
							.large-3.columns
								input(type="datetime-local" name="datetimeTest" placeholder="Date of Test")
							.large-2.columns
								input(type = "text" placeholder = "Test Points" name="testPoints")
						.row
							.large-12.columns
								
						div(ng-repeat='question in questions'  class="question-block")
							.form-group
								.row
									.callout.panel
										.row
											.large-3.columns
												center
													h4 Question Type
												br
												select(form='newtestCreation' name='questionType' class="question-type")
													option(value='mtpl') Multiple Choice
													option(value='shrt') Short Answer
													option(value='mtch') Matching
													option(value='othr') Other
												br
												br
												row												
													.row.collapse
														.small-2.columns
															span.prefix Worth
														.small-2.columns
															input(name='points' type='number' min='1', placeholder='')
														.small-2.columns
															span.postfix Pts.
														.small-6.columns
															center
																input(id="checkbox1" name='randomnized' type='checkbox')
																label(for='random') Randomize?								
											.large-1.columns
												br
											.large-8.columns
												center
													h4 Question Info
												.row
													.large-12.columns
														.row.collapse
															.small-2.columns
																span.prefix Question:
															.small-10.columns
																input.form-control.medform(name='question' type='text', placeholder='e.g. How big is China?', ng-model='item.text')
												.row
													.large-12.columns
														.row.collapse
															.small-2.columns
																br
																center
																	h6 # Answer Choices
																select(form='newtestCreation' name='amtAnswers')
																	option(value='2') 2
																	option(value='3') 3
																	option(value='4') 4
																	option(value='5') 5
																center
																	h6 Correct Answer
																		select(form='newtestCreation' name='correctAnswer')
																			div(ng-repeat='answer in answers')
																				.form-group
																					option(value='a') A
																					option(value='b') B
																					option(value='c') C
																					option(value='d') D
															.small-9.columns
																.row
																	.large-12.columns
																		.row.collapse
																			.small-2.columns
																				span.prefix A:
																			.small-10.columns
																				input(type='text', name='answer', placeholder='Apple')
																.row
																	.large-12.columns
																		.row.collapse
																			.small-2.columns
																				span.prefix B:
																			.small-10.columns
																				input(type='text',name='answer', placeholder='Banana')
																.row
																	.large-12.columns
																		.row.collapse
																			.small-2.columns
																				span.prefix C:
																			.small-10.columns
																				input(type='text',name='answer',placeholder='Carrot')
																.row
																	.large-12.columns
																		.row.collapse
																			.small-2.columns
																				span.prefix D:
																			.small-10.columns
																				input(type='text', placeholder='Daikon')
											.large-2.columns
												a
													
												.row
													br
													br
													
							br
						.row
							.large-12.columns
								center
									a.medium.radius.button(ng-click='newQuestion()') Kevin Zhou super Troll (aka add question)

						.row
							.large-12.columns
								input(name='submit' value='Submit' type='submit' onclick='handleSubmit(); return false;')
