extends layout

block rightBar
	//
		 Right Nav Section
	li.active
		a.medium.radius.button.navBtm(href='#') Add a Test
	li.divider.btnSpacer
	li.active
		a.medium.radius.button.navBtn(href='#', data-reveal-id='firstModal') View All Tests
	#firstModal.reveal-modal(data-reveal)
		.row
			.large-12.columns
				h2 View All Tests
		.row
			.large-12.columns
				ul.clearing-thumbs.small-block-grid-4(data-clearing='data-clearing')
					li
						a(href='img/folderpic.jpg')
							img(data-caption='File 1', src='img/folderpic.jpg')
					li
						a(href='img/folderpic.jpg')
							img(data-caption='File 2', src='img/folderpic.jpg')
					li
						a(href='img/folderpic.jpg')
							img(data-caption='File 3', src='img/folderpic.jpg')
		a.close-reveal-modal &times;

br
br
br

block pageContent
	.row
		.large-12.columns
			h1.title Dashboard
		br
	.row
		.large-12.columns
			form#newtestCreation(action='/newtest' method='post')
				.panel
					.row
						.large-7.columns
							input(type='text' placeholder='Test Name' name='testName')
						.large-3.columns
							input(type='datetime-local' name='datetimeTest')
						.large-2.columns
							input(type="text" placeholder="Test Points" name="testPoints")
					.row
						input(id="yoloswag420blazeit" name='RandomizedTestQuestions' type='checkbox')
						input(id="checkbox1" name='randomnized' type='checkbox')
						label(for='random') Randomize?
					div(ng-repeat='question in questions')
						.form-group
							.row
								.callout.panel
									.row
										.large-3.columns
											center
												h4 Question Type
											select.question-type(form='newtestCreation' name='questionType')
												option(value='mtpl') Multiple Choice
												option(value='shrt') Short Answer
												option(value='mtch') Matching
												option(value='othr') Other
										.large-7.columns
											center
												h4 Question Info
											.row
												.large-12.columns
													.row.collapse
														.small-2.columns
															span.prefix Question:
														.small-10.columns
															input.form-control.medform(name='question' type='text', placeholder='e.g. How big is China?', ng-model='item.text')
											.row
												.large-12.columns
													.row.collapse
														.small-2.columns
															br
															center
																h6 # Answer Choices
															select(form='newtestCreation' name='amtAnswers')
																option(value='2') 2
																option(value='3') 3
																option(value='4') 4
																option(value='5') 5
															center
																h6 Correct Answer
																	select(form='newtestCreation' name='correctAnswer')
																		.form-group
																			option(value='a') A
														.small-9.columns
															div(ng-repeat='answer in answers')
																.row
																	.large-12.columns
																		.row.collapse
																			.small-2.columns
																				span.prefix A
																			.small-10.columns
																				input(type='text', name='answer', placeholder='Enter answer choice')
														a.medium.radius.button(ng-click='newAnswer()') Add Answer
											a
												h4(stlye='float:right;', align='right')
													font(color='F21111') &times;
											.row
												br
												br
												.large-12.columns
													center
														input(id='checkbox1' name='randomnized' type='checkbox')
														label(for='random') Randomize?
												.large-12.columns
													.row.collapse
														.small-5.columns
															span.prefix Worth
														.small-4.columns
															input(name='points' type='number', placeholder='')
														.small-3.columns
															span.postfix Pts.
						br
					center
						a.medium.radius.button(ng-click='newQuestion()') Add Question

					.row
						.large-12.columns
						input(name='submit' value='Submit' type='submit')
